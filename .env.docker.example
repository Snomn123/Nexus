# DOCKER ENVIRONMENT CONFIGURATION
# CRITICAL: Never commit this file to version control!
# Generate new secrets using: npm run generate-secrets

# Database Configuration - USE STRONG CREDENTIALS
DB_USER=nexus_user
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
DB_PASSWORD=REPLACE_WITH_STRONG_DATABASE_PASSWORD
DB_NAME=nexus

# JWT Configuration - GENERATE STRONG SECRETS
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=REPLACE_WITH_64_BYTE_HEX_SECRET_GENERATED_CRYPTOGRAPHICALLY
JWT_REFRESH_SECRET=REPLACE_WITH_DIFFERENT_64_BYTE_HEX_SECRET_GENERATED_CRYPTOGRAPHICALLY

# Frontend Configuration
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_SOCKET_URL=http://localhost:5000
REACT_APP_ENV=development

# Security Configuration
BCRYPT_ROUNDS=12

# Redis Configuration (Optional - falls back to localhost:6379)
# REDIS_URL=redis://:REDIS_PASSWORD@redis:6379
# REDIS_PASSWORD=REPLACE_WITH_STRONG_REDIS_PASSWORD

# Production Proxy Configuration
# For production deployments behind reverse proxy (nginx, traefik, cloudflare, etc.)
# Uncomment and set to specific proxy IPs for security
# TRUST_PROXY=192.168.1.1,10.0.0.1,172.17.0.1
# NODE_ENV=production