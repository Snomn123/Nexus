# PRODUCTION ENVIRONMENT CONFIGURATION
# CRITICAL: Never commit this file to version control!
# Generate new secrets using: npm run generate-secrets

# Server Configuration
NODE_ENV=production
PORT=5000
FRONTEND_URL=https://snomn123.github.io

# Database Configuration - USE STRONG CREDENTIALS
DB_HOST=postgres
DB_PORT=5432
DB_NAME=nexus
DB_USER=nexus_user
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
DB_PASSWORD=REPLACE_WITH_STRONG_DATABASE_PASSWORD

# Redis Configuration - USE STRONG PASSWORD
REDIS_URL=redis://:REDIS_PASSWORD@redis:6379
REDIS_HOST=redis
REDIS_PORT=6379
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
REDIS_PASSWORD=REPLACE_WITH_STRONG_REDIS_PASSWORD

# JWT Configuration - GENERATE STRONG SECRETS
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=REPLACE_WITH_64_BYTE_HEX_SECRET_GENERATED_CRYPTOGRAPHICALLY
JWT_REFRESH_SECRET=REPLACE_WITH_DIFFERENT_64_BYTE_HEX_SECRET_GENERATED_CRYPTOGRAPHICALLY

# Security Configuration
BCRYPT_ROUNDS=12
TRUST_PROXY=true

# Production Optimizations
LOG_LEVEL=warn
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Session Security
SESSION_SECURE=true
SESSION_SAME_SITE=strict

# File Upload Security
MAX_FILE_SIZE=10485760

# Database Security
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_POOL_IDLE_TIMEOUT=30000
DB_SSL=true

# HTTPS Configuration
HTTPS_CERT_PATH=/etc/ssl/certs/nexus.crt
HTTPS_KEY_PATH=/etc/ssl/private/nexus.key

# Monitoring (Optional)
# SENTRY_DSN=your_sentry_dsn_here
# NEW_RELIC_LICENSE_KEY=your_newrelic_key_here